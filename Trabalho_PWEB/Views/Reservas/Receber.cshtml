@model Trabalho_PWEB.Models.EstadoCarro

@{
    ViewData["Title"] = "Entregar";
}

<h1>Receber Veiculo do Cliente</h1>

<h4>Dados Carro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Receber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idReserva"  class="control-label"></label>
                <input readonly asp-for="idReserva" value="@ViewBag.id" class="form-control" />
                <span asp-validation-for="idReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nKm" class="control-label"></label>
                <input asp-for="nKm" class="form-control" />
                <span asp-validation-for="nKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <input asp-for="Obs" class="form-control" />
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DanosCarro" /> @Html.DisplayNameFor(model => model.DanosCarro)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Entregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
