@model List<Trabalho_PWEB.Models.ManageUserRolesViewModel>


@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
              <div asp-validation-summary="All" class="text-danger"></div>
             <div class="form-group">
                <label class="control-label"> Username </label>
                <input readonly class="form-control" value="@ViewBag.UserName">
             </div>
             <div class="form-group mt-3">
                <label class="control-label"> Adicionar/Remover Roles </label>
                @for (var i = 0;i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="hidden" asp-for="@Model[i].UserID" />
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].Selected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>